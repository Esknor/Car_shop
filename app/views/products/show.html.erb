<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Img:</strong>
  <%= image_tag @product.img.url(:thumb), class: 'img-show' if @product.img? %>
</p>

<p>
  <strong>Desc short:</strong>
  <%= @product.text %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Category id:</strong>
  <%= @product.category_id %>
</p>

<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-md btn-warning" %>
<%= link_to 'Back', products_path, class: "btn btn-md btn-default" %>
