<h1>News</h1>

<ul class="list-group">
	<% @posts.each do |post| %>
	    <li class="list-group-item">
	      <h4><%= post.title %> <div class="text-muted" style="font-size: 14px"><%= post.created_at.to_date %></div></h4>
	      <div><%= post.text %></div>
	      <a href="/news/read/<%= post.id %>">Read all -> </a>
	    </li>
	<% end %>
</ul>	

<div class="row" style="padding: 30px 0px">
  <a href="/news/archive" class="btn btn-info">Archive</a>
</div>
